{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*.ts",
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}